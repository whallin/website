---
import { Image } from "astro:assets";

const locale = (Astro.currentLocale as "en" | "sv") ?? "en";
const { client } = Astro.props;
---

<section>
  <blockquote
    class="border-l-2 border-stone-300 pl-6 text-stone-700 dark:border-stone-700 dark:text-stone-300"
  >
    <p
      class="mb-6 font-serif text-lg leading-relaxed text-stone-900 italic dark:text-stone-100"
    >
      "{client.data.testimonial.quote[locale]}"
    </p>
    <footer class="flex items-center gap-3">
      <Image
        src={client.data.testimonial.author.avatar}
        alt={client.data.name}
        width={42}
        height={42}
        format="avif"
        quality={80}
        layout="constrained"
        fit="cover"
        position="center"
        class="rounded-full select-none"
      />
      <div>
        <cite class="font-medium text-stone-800 not-italic dark:text-stone-100">
          {client.data.testimonial.author.name}
        </cite>
        <p class="text-sm text-stone-500">
          {client.data.testimonial.author.title[locale]}
        </p>
      </div>
    </footer>
  </blockquote>
</section>
