---
import PixelarticonsBriefcase from "../../icons/PixelarticonsBriefcase.astro";
import PixelarticonsClock from "../../icons/PixelarticonsClock.astro";
import PixelarticonsHeart from "../../icons/PixelarticonsHeart.astro";
import PixelarticonsMail from "../../icons/PixelarticonsMail.astro";
import SidebarBase from "../SidebarBase.astro";

const locale = (Astro.currentLocale as "en" | "sv") ?? "en";

const translations = {
  en: {
    acceptingClients: "Accepting clients?",
    acceptingClientsValue: "Yes, booking now",
    leadTime: "Lead time",
    leadTimeValue: "~3 days",
    responseTime: "Response time",
    responseTimeValue: "<24 hours",
    workLocation: "Work location",
    workLocationValue: "On-site & remote",
  },
  sv: {
    acceptingClients: "Accepterar kunder?",
    acceptingClientsValue: "Ja, bokningsbar nu",
    leadTime: "Ledtid",
    leadTimeValue: "~3 dagar",
    responseTime: "Svarstid",
    responseTimeValue: "<24 timmar",
    workLocation: "Arbetsplats",
    workLocationValue: "PÃ¥ plats & distans",
  },
};

const stats = [
  {
    label: translations[locale].acceptingClients,
    value: translations[locale].acceptingClientsValue,
    Icon: PixelarticonsHeart,
  },
  {
    label: translations[locale].leadTime,
    value: translations[locale].leadTimeValue,
    Icon: PixelarticonsClock,
  },
  {
    label: translations[locale].responseTime,
    value: translations[locale].responseTimeValue,
    Icon: PixelarticonsMail,
  },
  {
    label: translations[locale].workLocation,
    value: translations[locale].workLocationValue,
    Icon: PixelarticonsBriefcase,
  },
];
---

<SidebarBase showLogo showReturn slot="sidebar">
  <div slot="content">
    <aside class="space-y-4 text-xs text-stone-500">
      {
        stats.map((stat) => (
          <div class="space-y-0.5">
            <span class="mb-1 flex items-center gap-1">
              <stat.Icon aria-hidden="true" class="h-4 w-4" />
              {stat.label}
            </span>
            <span class="font-mono text-stone-800 dark:text-stone-300">
              {stat.value}
            </span>
          </div>
        ))
      }
    </aside>
  </div>
</SidebarBase>
