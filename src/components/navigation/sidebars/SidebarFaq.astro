---
import { getCollection } from "astro:content";
import PixelarticonsClock from "../../icons/PixelarticonsClock.astro";
import PixelarticonsFlag from "../../icons/PixelarticonsFlag.astro";
import SidebarBase from "../SidebarBase.astro";

const locale = (Astro.currentLocale as "en" | "sv") ?? "en";
const faqCollections = await getCollection("faqCollection");

const totalQuestions = faqCollections.reduce((total, collection) => {
  return total + collection.data.items.length;
}, 0);

const currentDate = new Date();
const formattedDate = currentDate.toLocaleDateString(locale, {
  year: "numeric",
  month: "long",
  day: "numeric",
});

const translations = {
  en: {
    questionsAnswered: "Questions answered",
    lastUpdated: "Last updated",
  },
  sv: {
    questionsAnswered: "Fr√•gor besvarade",
    lastUpdated: "Senast uppdaterad",
  },
};

const stats = [
  {
    label: translations[locale].questionsAnswered,
    value: totalQuestions.toString(),
    Icon: PixelarticonsFlag,
  },
  {
    label: translations[locale].lastUpdated,
    value: formattedDate,
    Icon: PixelarticonsClock,
  },
];
---

<SidebarBase showLogo showReturn>
  <div slot="content">
    <aside class="space-y-4 text-xs text-stone-500">
      {
        stats.map((stat) => (
          <div class="space-y-0.5">
            <span class="mb-1 flex items-center gap-1">
              <stat.Icon aria-hidden="true" class="h-4 w-4" />
              {stat.label}
            </span>
            <span class="font-mono text-stone-800 dark:text-stone-300">
              {stat.value}
            </span>
          </div>
        ))
      }
    </aside>
  </div>
</SidebarBase>
