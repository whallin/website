---
export const prerender = true;

import ImgHeaderBlog from "../../assets/header/headerBlog.jpg";
import BlogFeaturedPost from "../../components/blog/BlogFeaturedPost.astro";
import BlogRecentPosts from "../../components/blog/BlogRecentPosts.astro";
import SidebarBlog from "../../components/navigation/sidebars/SidebarBlog.astro";
import PageHeaderImg from "../../components/PageHeaderImg.astro";
import LayoutBase from "../../layouts/LayoutBase.astro";
---

<LayoutBase
  title="Hallin-bloggen"
  description="Utforska Hallin-bloggen med inspirerande artiklar, praktiska guider och personliga insikter inom design, utveckling och entreprenörskap."
>
  <SidebarBlog slot="sidebar" />

  <div slot="content" class="space-y-12">
    <PageHeaderImg
      headerImgSrc={ImgHeaderBlog}
      headerImgAlt=""
      headingText="Hallin-bloggen"
      headingItalic={false}
      descriptionText="En samling av tankar, idéer, insikter och åsikter - författade av mig själv eller med gäststjärnor."
      btnText="Skicka ett meddelande"
      btnHref="/contact"
      btnAriaLabel="Kontakta William angående bloggen"
    />

    <BlogFeaturedPost />

    <hr class="border-stone-300 dark:border-stone-700" />

    <BlogRecentPosts />
  </div>
</LayoutBase>
