---
export const prerender = true;

import AdvertGallery from "../../components/AdvertGallery.astro";
import SidebarBase from "../../components/navigation/SidebarBase.astro";
import PageHeaderImg from "../../components/PageHeaderImg.astro";
import LayoutBase from "../../layouts/LayoutBase.astro";
---

<LayoutBase
  title="Advertisement Collection"
  description="See all creative advertisements and ad campaigns by William Hallin. Inspiring examples of visual marketing and graphic design."
>
  <SidebarBase showLogo showReturn showNav slot="sidebar" />

  <div slot="content" class="space-y-12">
    <PageHeaderImg
      headingText="Advertisement Collection"
      headingItalic={false}
      descriptionText="You like the advertisements you're seeing across the site? How about you see them all at once? Check out the full ad collection."
      btnText="Get your own ad"
      btnHref="/hire"
      btnAriaLabel="Go to the hire page to get your own advertisement"
    />

    <AdvertGallery />
  </div>
</LayoutBase>
