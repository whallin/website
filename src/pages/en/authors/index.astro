---
import ImgHeaderAuthors from "../../../assets/header/headerAuthors.jpg";
import AuthorsAllAuthors from "../../../components/authors/AuthorsAllAuthors.astro";
import PixelarticonsHeart from "../../../components/icons/PixelarticonsHeart.astro";
import PixelarticonsHumanHandsup from "../../../components/icons/PixelarticonsHumanHandsup.astro";
import SidebarBase from "../../../components/navigation/SidebarBase.astro";
import PageHeaderImg from "../../../components/PageHeaderImg.astro";
import LayoutBase from "../../../layouts/LayoutBase.astro";
import { calculateAuthorStats } from "../../../utils/authorStats";

const authorStats = await calculateAuthorStats();

const stats = [
  {
    label: "Total authors",
    value: authorStats.totalAuthors.toString(),
    Icon: PixelarticonsHumanHandsup,
  },
  {
    label: "Top contributor",
    value: authorStats.topContributor,
    Icon: PixelarticonsHeart,
  },
];
---

<LayoutBase>
  <SidebarBase showLogo showReturn slot="sidebar">
    <div slot="content">
      <aside class="space-y-4 text-xs text-stone-500">
        {
          stats.map((stat) => (
            <div class="space-y-0.5">
              <span class="mb-1 flex items-center gap-1">
                <stat.Icon aria-hidden="true" class="h-4 w-4" />
                {stat.label}
              </span>
              <span class="font-mono text-stone-800 dark:text-stone-300">
                {stat.value}
              </span>
            </div>
          ))
        }
      </aside>
    </div>
  </SidebarBase>

  <div slot="content" class="space-y-12">
    <PageHeaderImg
      headerImgSrc={ImgHeaderAuthors}
      headerImgAlt=""
      headingText="All content authors"
      headingItalic={false}
      descriptionText="Meet the people behind the words â€” featured authors, collaborators, and friends who help shape what you're reading on the site."
      btnText="Contact William"
      btnHref="/contact"
      btnAriaLabel="Contact William about authors"
    />

    <AuthorsAllAuthors />
  </div>
</LayoutBase>
